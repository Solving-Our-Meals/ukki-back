<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.ukki.user.model.dao.MypageMapper">
    <select id="findUserInfoByUserNo" resultType="com.ohgiraffers.ukki.user.model.dto.MypageDTO">
        SELECT
        USER_NO AS userNo,
        USER_NAME,
        USER_PROFILE AS profileImage,
<!--        RESERVATION_COUNT AS reservationCount,-->
<!--        REVIEW_COUNT AS reviewCount-->
        FROM TBL_USER
        WHERE USER_NO = #{userNo}
    </select>
</mapper>